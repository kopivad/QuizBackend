<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="BasicUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.kopivad.quizzes.domain.User</class>
        <class>com.kopivad.quizzes.domain.Quiz</class>
        <class>com.kopivad.quizzes.domain.Question</class>
        <class>com.kopivad.quizzes.domain.Answer</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/quizzes_test"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="vad"/>
            <property name="hibernate.connection.password" value="1234"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>

</persistence>